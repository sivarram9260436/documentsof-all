<h3> login page </h3>

<% if flash[:notice] %>
    <div class="notice"> <b><%= flash[:notice] %></b></div>
<% end %>
<%= form_for @user ,:url => {:controller => "admins" ,:action => "verify_login"},method: :get do |f| %>


<p>
<%= f.label :email %><br>
<%= f.text_field :email %>
</p>

<p>
<%= f.label :password %><br>
<%= f.text_field :password %>
</p>

<p>
<%= f.submit "login" %>
</p>

<% end %>