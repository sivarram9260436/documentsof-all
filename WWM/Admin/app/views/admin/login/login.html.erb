   <script src="/javascripts/jquery.min.js" type="text/javascript"></script>
        <script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
        <%= stylesheet_link_tag 'jquery/jquery-ui-dialog' %>

<div class="logo_header">
          <a href="#"><img src="/images/logo_jpg.jpg" alt="login logo" /> </a>
        </div>
     <div class="login_block">
          <%= form_tag('/admin/login/verify_login') do %>
        <div class="section_block">
        <div class="login_content">
        <table>
             <tr>
               <td colspan="2">
                 <div class="flash_green">
                   <%= flash[:notice] if flash[:notice]!= nil %>
                 </div>
               </td>
             </tr>
             <tr>
               <td><label for="login_email">User Name</label> </td>
               <td> <%= text_field :login, :email,:size=>"25",:class=>'login_field',:autofocus=>"autofocus" %> </td>
             </tr>
             <tr>
               <td><label for="login_password">Password</label> </td>
               <td> <%= password_field :login, :password,:size=>"25",:class=>'login_field' %></td>
             </tr>
             <tr>
               <td> </td>
               <td><div class="remember">
                  <%= check_box_tag 'remember_me', '1', true %>
                  <label for="remember_me">Remember Me</label>
                  </div>
                  <div class="button">
                  <input class="submit" type="submit" value="Sign in" name="commit"/>
                   </div>
               </td>
             </tr>
        </table>
                <div class="user_detail">
                <p> <a href="javascript:void(0);" id="forget_password">Click here to (re)set Password </a></p>
                <p class="contact_detail">Login problems?<a href="mailto:support@themachinist.kreatio.com"> click here</a></p>
                </div> <!-- user_detail -->
              </div>
           </div>
  <div class="shade"><img src="/images/Shade-_.png" alt="shade_image" width="439" height="200"/></div>
<%end%>
          </div> <!-- login_block -->


<div style="display:none;" id="forget_password_dialog">
<%= render :partial=> "forgot_password" %>
</div>
<script type="text/javascript">
$(function(){
        $("#forget_password").click(function(){
                $('#forget_password_dialog').dialog({
                        model:true,
                        height: 250,
                        width: 436
                });
        });
});
</script>

