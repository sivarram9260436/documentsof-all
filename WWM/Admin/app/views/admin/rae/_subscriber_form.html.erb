<div id="container" style="padding-top: 20px;">
	<!--<div class="search_block">
	<div class="search_fields">-->
	<div class="section_block full_section">
		<h2><%= @page_properties[:menu_title] %></h2>
		<div class="section_content">
			<%= form_tag({:controller=>"admin/rae",:action => 'subscriber_update'},{:id=>"subscriber_update",:name=>'subscriber_update'} )%>
			<%#=hidden_field_tag :id,@subscriber.id if @subscriber%>
			<div class="form_data">
				<label for="text_head"> User Id:</label>
				<%= text_field "subscriber","id",:class=>"text_style input_style input_text",:value=>@subscriber.id, :readonly =>true %>
			</div>
			<div class="form_data">
				<label for="text_head"> Email Id :</label>
				<%= text_field "subscriber","email_id",:class=>"text_style input_style input_text",:value=>@subscriber.email_id%>
			</div>
			<div class="form_data">
				<label for="text_head">First Name :</label>
				<%= text_field "subscriber","first_name",:class=>"text_style input_style input_text",:value=>@subscriber.first_name%>
			</div>
			<div class="form_data">
				<label for="text_head">Last name :</label>
				<%= text_field "subscriber","last_name",:class=>"text_style input_style input_text",:value=>@subscriber.last_name%>
			</div>
			<div class="form_data">
				<label for="text_head">Company Name :</label>
				<%= text_field "subscriber_property","end_user_company_name",:class=>"text_style input_style input_text",:value=>@subscriber_property.end_user_company_name%>
			</div>
			<div class="form_data">
				<label for="text_head">Job Title :</label>
                                 <%= text_field "subscriber_property","Job_title",:class=>"text_style input_style input_text",:value=>@subscriber_property.Job_title%>
			</div>
			<div class="form_data">
	    	     <%= content_tag(:div, link_to('Save', 'javascript:void(0)', :id => 'save_update_subscriber'), :class => 'button' ) %>
  		    </div>
			</div>
    </div>
</div>

<script type="text/javascript">
	jQuery("#save_update_subscriber").click(function() {
		$.ajax({
			url : '/admin/rae/subscriber_update',
			type : 'POST',
			data : jQuery("#subscriber_update").serialize(),
			beforeSend : function(xhr) {
				$("#loading").show();
				xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
			},
			success : function(msg) {
                            alert('Thank you for updating profile');
 			    parent.$.fn.colorbox.close();
			}
		});
	});
</script>
