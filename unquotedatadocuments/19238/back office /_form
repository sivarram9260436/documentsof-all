    <% end %><!-- tr -->


<%= content_tag(:tr) do %>
          <%= content_tag(:td, label_tag("TVPI:"), {:class => "lab-field hh"}) %>
          <%= content_tag(:td, text_field(:fund_performance, :tvpi, :value => (@fund_performance.tvpi ? @fund_performance.tvpi : nil)), { :class =>"b-size"}) %>
    <% end %>
<%= content_tag(:tr) do %>
          <%= content_tag(:td, label_tag("Commitment:"), {:class => "lab-field hh"}) %>
          <%= content_tag(:td, text_field(:fund_performance, :commitment, :value => (@fund_performance.commitment ? @fund_performance.commitment : nil)), { :class =>"b-size"}) %>
    <% end %><!-- tr -->

    

  <%#= content_tag(:tr) do %>
          <%#= content_tag(:td, label_tag("Source:"), {:class => "lab-field"}) %>
          <%#= content_tag(:td,collection_select(:fund_performance,  FundPerformance.all ,:id,:name, {},{:class => "select_box_auto"})) %> 
    <%# end %><!-- tr -->
   

   <!-- tr -->
    <%= content_tag(:tr) do %>
            <%= content_tag(:td,  label_tag("Fund Performance Date:"), { :class => "lab-field hh" }) %>
    		<%= content_tag(:td, date_select(:fund_performance, :fund_performance_date, { :start_year => (Time.zone.now.year+5), :end_year => 1980, :order => [:month, :year], :prompt => { :month => "Month", :year => "Year" } })) %>
    	<% end %>


<%#= content_tag(:tr) do %>
            <%#= content_tag(:td,  label_tag("Performance Source:"), { :class => "lab-field" }) %>
    		<%#= content_tag(:td, text_field(:fund_performance, :performance_source, :value => (@fund_performance.performance_source ? @fund_performance.performance_source : nil)), { :class =>"b-size"}) %>
    	<% #end %>

  <%#= content_tag(:tr) do %>
            <%#= content_tag(:td,  label_tag("Date of Commitment:"), { :class => "lab-field hh" }) %>
                <%#= content_tag(:td, date_select(:fund_performance, :date_of_commitment, { :start_year => (Time.zone.now.year+5), :end_year => 1980, :order => [:month, :year], :prompt => { :month => "Month", :year => "Year" } })) %>
        <%# end %>

 <%= content_tag(:tr) do %>
          <%= content_tag(:td, label_tag("Currency:"), {:class => "lab-field"}) %>
          <% @fund_per =  @fund_performance %>
          <%= content_tag(:td, collection_select(:fund_performance, :currency_id, Currency.all.sort_by(&:name), :id, :name, { :include_blank => "Select" }, { :class => "select_box"})) %>
<% end %>

	
    <%= content_tag(:tr) do %>
            <%= content_tag(:td) do%>
                <%= content_tag(:div, link_to(@fund_performance.new_record? ? "Save" : "Update", {}, { :id => @fund_performance.new_record? ? "save_fund_performance_event" : "update_fund_performance_event", :href => "javascript:void(0)" }), { :class => "f-button" }) %>
                <%= content_tag(:div, link_to( "Close", {}, { :class => "close_color_box", :href => "javascript:void(0)" }), { :class => "f-button" }) %>
            <% end %> <!-- td end -->
        <% end %> <!-- tr end -->

    <% end %><!-- table -->
<% end %> <!--form end -->
<%= content_tag(:script, { :type => "text/javascript" }) do %>
$(function() {
    $(document).on("click", '#save_fund_performance_event', function() {
         var params =$("#form_fund_performances").serialize();
        parent.add_fund_performance(params);
    });
    
$(document).on("click", '#update_fund_performance_event', function() {
        var params =$("#form_fund_performances").serialize();
        var event_id =$("#fund_performance_id").val();
        parent.update_fund_performance(params,event_id);
    });
    
    $(document).on("click", '.close_color_box', function() {
    	parent.close_color_box();
    	
    });

});
<% end %>

