          <%= content_tag(:td, label_tag("Source:"), {:class => "lab-field hh "}) %>
          <%= content_tag(:td,select("fund_performance", "source", ["GP","LP","Other"],{ :include_blank => "Please select" }, { :class => "select_box"})) %>
    <% end %>	  	
    
     <%= content_tag(:tr) do %>
          <%= content_tag(:td, label_tag("Gross IRR:"), {:class => "lab-field hh"}) %>
	  <%= content_tag(:td, text_field(:fund_performance, :gross_irr, :value => (@fund_performance.gross_irr ? @fund_performance.gross_irr : nil)), { :class =>"b-size"}) %>
    <% end %><!-- tr -->
    
    <%= content_tag(:tr) do %>
		          <%= content_tag(:td, label_tag("Net IRR:"), {:class => "lab-field hh"}) %>
